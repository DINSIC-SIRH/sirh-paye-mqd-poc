<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">

	<!-- Permettre l'utilisation des annotations dans les beans -->
	<!-- <context:annotation-config /> -->


	<aop:aspectj-autoproxy />
	<bean id="logAspect" class="com.thalesgroup.stif.bouchon.producteur.redis.profiler.ExecutionTimeProfiler" />


	<import resource="classpath:persistence-tampon-context.xml" />

	<context:component-scan base-package="com.thalesgroup.stif.bouchon.producteur.redis" />

	<!-- <bean id="simulatorImpl" class="com.thalesgroup.stif.bouchon.producteur.redis.simulator.SimulatorImpl" /> -->

	<context:property-override location="file:${applicationProperties.override}" />


	<bean id="application" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="locations" value="file:${applicationProperties.simulation}" />
	</bean>




</beans>
