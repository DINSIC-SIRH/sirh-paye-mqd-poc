		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="com.thalesgroup.stif.log.system.debug" additivity="false">
		<level value="INFO" />
		<appender-ref ref="SYSTEM_DEBUG_LOGFILE" />
	</logger>

	<logger name="com.thalesgroup.stif.log.system.workflow" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="CONSOLE" />
	</logger>


	<logger name="com.thalesgroup.stif.log.metier.com.thalesgroup.stif.commons.traces.logs.FacadeLogs.siri" additivity="false">
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="com.thalesgroup.stif.log.system.performance" additivity="false">
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="com.thalesgroup.stif.log.system.action" additivity="false">
		<level value="${filter.log.level}" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="log4j.category.org.springframework.integration.file" additivity="false">
		<level value="ERROR" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="log4j.category.com.jcraft.jsch" additivity="false">
		<level value="ERROR" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<root level="ERROR">
		<appender-ref ref="CONSOLE" />
	</root>
</configuration>
