<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="5 minutes">
	
	<property name="date" value="%date{dd/MM/YYYY HH:mm:ss.SSS,UTC}" />
	
	<appender name="APPLICATION_SIRI_LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

		<file>/var/log/stif/orchestration/metier/administration-relais-siri.log</file>
		<prudent>true</prudent>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/var/log/stif/orchestration/metier/administration-relais-siri.%d{yyyyMMdd}.%i.log</fileNamePattern>
			<maxHistory>2</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches maxFilesSize -->
				<maxFileSize>20MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>

		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>${date} [%level] %logger{36} - %msg%n</pattern>
		</layout>
	</appender>

	<appender name="APPLICATION_ERROR_LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

		<file>/var/log/stif/orchestration/metier/administration-relais-error.log</file>
		<prudent>true</prudent>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/var/log/stif/orchestration/metier/administration-relais-error.%d{yyyyMMdd}.%i.log</fileNamePattern>
			<maxHistory>2</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches maxFilesSize -->
				<maxFileSize>20MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>

		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>${date} [%level] %logger{36} - %msg%n</pattern>
		</layout>
	</appender>

	<appender name="SYSTEM_LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

		<file>/var/log/stif/orchestration/technique/administration-system-technique.log</file>
		<prudent>true</prudent>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/var/log/stif/orchestration/technique/administration-system-technique.%d{yyyyMMdd}.%i.log</fileNamePattern>
			<maxHistory>2</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches maxFilesSize -->
				<maxFileSize>20MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>

		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>${date} [%level] %logger{36} - %msg%n</pattern>
		</layout>
	</appender>

	<appender name="SYSTEM_ROOT_LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

		<file>/var/log/stif/orchestration/root/administration-root.log</file>
		<prudent>true</prudent>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/var/log/stif/orchestration/root/administration-root.%d{yyyyMMdd}.%i.log</fileNamePattern>
			<maxHistory>2</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches maxFilesSize -->
				<maxFileSize>20MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>

