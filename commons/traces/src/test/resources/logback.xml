		</layout>
	</appender>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>${date} [%level] %class - %msg%n</pattern>
		</layout>
	</appender>

	<logger name="com.thalesgroup.stif.log.metier.administration.siri" additivity="false">
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="com.thalesgroup.stif.log.metier.administration.error" additivity="false">
		<level value="WARN" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="com.thalesgroup.stif.log.system.error" additivity="false">
