		</rollingPolicy>

		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>${date} [%level] %logger{36} - %msg%n</pattern>
		</layout>
	</appender>

	<appender name="SYSTEM_WORKFLOW_LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

		<file>/var/log/stif/orchestration/debug/administration-system-workflow.log</file>
		<prudent>true</prudent>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/var/log/stif/orchestration/debug/administration-system-workflow.%d{yyyyMMdd}.%i.log</fileNamePattern>
